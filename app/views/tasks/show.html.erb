<h1><%=@task.title%></h1>
<p><%=@task.details%></p>
<% if @task.completed %>
<p> This task is completed </p>
<% else %>
<p> This task is not completed yet </p>
<% end %>
<p></p>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<p><%= link_to 'Back to the list', tasks_path %></p>
<%= link_to 'Edit task', edit_path(@task) %>
